<%= form_with(model: post, local: true) do |form| %>
  <div class = "d-flex justify-content-center col-12 flex-wrap text-center">
    <% if post.errors.any? %>
      <div id="error_explanation">
        <h2>エラーがあります</h2>
  
        <ul>
          <% post.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
  </div>
  <% end %>
  
  <div class = "field  d-flex justify-content-center col-12 flex-wrap mt-5">
      <%= form.label :title , class: "col-10"%>
      <%= form.text_field :title, class: "form-control col-10"%>
    </div>

    <div class="field  d-flex justify-content-center col-12 flex-wrap">
      <%= form.label :contents , class: " col-10"%>
      <%= form.text_area :contents , class: "form-control col-10"%>
    </div>
    <div class="field  d-flex justify-content-center col-12 flex-wrap">
    <div class="field">
    <%= form.label :tag , class: " col-10"%>
      <%= form.text_field :tag, class: "form-control col-10"%>
  </div>

    
  <div class = "field  d-flex justify-content-center col-12 flex-wrap">
    <%= form.label :time, class: " col-10" %>
    <div class = " col-10">
    <%=form.number_field( :time, in: 0.5..24.0, step: 0.5) %>
    </div>
  </div>

    <div class="actions field  d-flex justify-content-center col-12 flex-wrap mt-5">
    <%= form.submit "投稿", class: "btn btn-primary col-10 "%>
    </div>
  </div>
<% end %>
