  <h2 class = "col-12 fixed-top mt-5">合計<%= @post %>時間</h2>
<div class = "d-flex align-items-center justify-content-center flex-wrap col-12 mt-2">
  <h1>記録</h1>
</div>

<div class = "d-flex align-items-center justify-content-center flex-wrap col-12 mt-5 ml-3">
    <% @posts.each do |post| %>
      <% if current_user.id == post.user_id %>
          <div class  = "bg-light  border border-dark rounded-pill col-6 d-flex flex-nowrap mb-3 mr-5">
              <p class = "mt-4 ml-5"><%= post.title%>
              <p class = "mt-4 ml-5"><%= post.time %>時間 </p>
              <p class = "mt-4 ml-5"><%= post.created_at %></p>
              <div class = "d-flex flex-nowrap mt-4 ml-3">
                <p><%= link_to '詳細', post,class: "text-primary mr-3" %></p>
                <p><%= link_to "編集", edit_post_path(post),class: "text-success mr-3" %></p>
                <p><%= link_to "削除", post_path(post), method: :delete ,class: "text-danger mr-3", data: { confirm: '削除してよろしいですか?' } %></p>
              </div>
          </div>
      <%end%>
    <%end%>
</div>
<div class = "d-flex justify-content-center flex-wrap col-12 mb-5 mt-2">
    <%= paginate @posts%>
</div>

