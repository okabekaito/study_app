  <h2 class = "col-12 mt-5">合計<%= @post %>時間</h2>
<div class = "d-flex align-items-center justify-content-center flex-wrap col-12 mt-2">
  <h1>記録</h1>
</div>

<div class = "d-flex align-items-center justify-content-center flex-wrap col-12 mt-5 ml-3">
    <% @posts.each do |post| %>
      <% if current_user.id == post.user_id %>
            <div class="row mb-3 border border-dark col-9">

              <p class = "col-4 themed-grid-col h4"><%= post.title%>
              <p class = "col-4 themed-grid-col h4"><%= post.time %>時間 </p>
              <p class = "col-4 themed-grid-col h5"><%= post.created_at %></p>
              <div class = "d-flex flex-nowrap  ml-3 text-right">
              <%= link_to post do %>
                <i class="fas fa-search btn btn-primary text-white"></i>
              <% end %>


              </div>
          </div>
      <%end%>
    <%end%>
</div>
<div class = "d-flex justify-content-center flex-wrap col-12 mb-5 mt-2">
    <%= paginate @posts%>
</div>

